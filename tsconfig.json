{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "bundler",
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["./src/lib/utils/*"],
      "@components/*": ["./src/components/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "src/types/*.ts"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
